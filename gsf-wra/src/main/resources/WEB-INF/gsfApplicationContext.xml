<beans>
<!--
INSTALLATION:

Be sure to add this to your WEB-INF/web.xml file:
<context-param>
<param-name>contextConfigLocation</param-name>
<param-value>/WEB-INF/applicationContext.xml,/WEB-INF/gsfApplicationContext.xml</param-value>
</context-param>

USAGE:

Be sure to set any actions that need to be sateful to have a scope="prototype" in order that they are created as
new instances.
-->
    <bean id="gsfActionLocator"  scope="prototype" class="com.fatwire.gst.foundation.controller.impl.CommandActionLocator">
        <property name="defaultAction" ref="gsfRenderPage"/>
        <property name="actionMap">
            <map>
                <entry key="render" value-ref="gsfRenderPage"/>
            </map>
        </property>
    </bean>

    <bean id="gsfRenderPage" scope="prototype" class="com.fatwire.gst.foundation.controller.impl.RenderPage" />

</beans>
