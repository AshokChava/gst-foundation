<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.fatwire.gst</groupId>
		<artifactId>gst-parent</artifactId>
		<version>4</version>
	</parent>
    <groupId>com.fatwire.gst</groupId>
    <artifactId>gsf-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>FatWire GST: Site Foundation</name>
    <url>http://www.nl.fatwire.com/dta/contrib/gst-foundation/</url>
    <inceptionYear>2010</inceptionYear>
    <developers>
        <developer>
            <name>Dolf Dijkstra</name>
        </developer>
        <developer>
            <name>Tony Field</name>
        </developer>
    </developers>
    <scm>
        <connection>scm:svn:http://www.nl.fatwire.com/viewvc/dta/contrib/gst-foundation/trunk</connection>
        <developerConnection>scm:svn:http://www.nl.fatwire.com/svn/dta/contrib/gst-foundation/trunk</developerConnection>
        <url>http://www.nl.fatwire.com/viewvc/dta/contrib/gst-foundation/trunk</url>
    </scm>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
 <modules>
    <module>gsf-facades</module>
    <!--module>gsf-cs-test</module-->
    <module>gsf-wra</module>
    <module>gsf-taglib</module>
    <module>gsf-tagging</module>
    <!--module>gsf-site </module-->
    <module>gsf-assembly</module>
  </modules>
<build>
	<plugins>
		<plugin>
		<inherited>false</inherited>
		<groupId>com.mycila.maven-license-plugin</groupId>
		<artifactId>maven-license-plugin</artifactId>
		 <configuration>
			<aggregate>true</aggregate>
			<includes>
				<include>src/**</include>
			</includes>
		 </configuration>
		</plugin>
	</plugins>
</build>
  <repositories>
      <repository>
         <id>nl.fatwire.com</id>
         <url>http://www.nl.fatwire.com/maven2</url>
         <snapshots>
            <enabled>false</enabled>
         </snapshots>
         <releases>
            <enabled>true</enabled>
         </releases>
      </repository>
      <repository>
         <id>snapshot.nl.fatwire.com</id>
         <url>http://www.nl.fatwire.com/snapshot-repo</url>
         <snapshots>
            <enabled>true</enabled>
         </snapshots>
         <releases>
            <enabled>false</enabled>
         </releases>
      </repository>
   </repositories>
  <distributionManagement>
        <site>
            <id>website</id>
            <url>scp://d670-1.nl.fatwire.com/var/www/html/dta/contrib/gst-foundation</url>
        </site>
    </distributionManagement>
</project>
