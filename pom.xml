<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <groupId>com.fatwire.gst</groupId>
      <artifactId>gst-parent</artifactId>
      <version>9</version>
   </parent>
   <groupId>com.fatwire.gst</groupId>
   <artifactId>gsf-parent</artifactId>
   <version>1.3-SNAPSHOT</version>
   <packaging>pom</packaging>
   <name>FatWire GST: Site Foundation</name>
   <url>http://www.nl.fatwire.com/dta/contrib/gst-foundation/</url>
   <inceptionYear>2010</inceptionYear>
   <developers>
      <developer>
         <name>Dolf Dijkstra</name>
      </developer>
      <developer>
         <name>Tony Field</name>
      </developer>
   </developers>
   <scm>
      <connection>scm:svn:http://www.nl.fatwire.com/viewvc/dta/contrib/gst-foundation/trunk</connection>
      <developerConnection>scm:svn:http://www.nl.fatwire.com/svn/dta/contrib/gst-foundation/trunk</developerConnection>
      <url>http://www.nl.fatwire.com/viewvc/dta/contrib/gst-foundation/trunk</url>
   </scm>
   <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
   </properties>
   <modules>
      <module>gsf-cs-all</module>
      <module>gsf-cs-test</module>
      <module>gsf-facades</module>
      <module>gsf-wra</module>
      <module>gsf-tagging</module>
      <module>gsf-action</module>
      <module>gsf-groovy</module>
      <module>gsf-taglib</module>
      <module>gsf-assembly</module>
   </modules>
   <build>
      <plugins>
       <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
             <source>1.6</source>
             <target>1.6</target>
          </configuration>
         </plugin>
         <plugin>
           <groupId>org.apache.maven.plugins</groupId>
           <artifactId>maven-javadoc-plugin</artifactId>
           <version>2.8</version>
           <configuration>
               <source>1.6</source>
               <javadocVersion>1.6</javadocVersion>
               <quiet>true</quiet>
               <detectLinks>false</detectLinks>
               <detectOfflineLinks>false</detectOfflineLinks>
           </configuration>
           <executions>
             <execution>
               <id>attach-javadocs</id>
               <phase>install</phase>
                 <goals>
                   <goal>jar</goal>
                 </goals>
              </execution>
           </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-release-plugin</artifactId>
            <version>2.1</version>
            <configuration>
               <preparationGoals>clean install</preparationGoals>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>findbugs-maven-plugin</artifactId>
            <version>2.3.2</version>
         </plugin>
         <plugin>
            <artifactId>maven-pmd-plugin</artifactId>
            <version>2.5</version>
            <configuration>
               <targetJdk>1.6</targetJdk>
            </configuration>
         </plugin>
      </plugins>
   </build>
   <reporting>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>2.8</version>
            <configuration>
               <source>1.6</source>
               <javadocVersion>1.6</javadocVersion>
               <quiet>true</quiet>
               <detectLinks>true</detectLinks>
               <detectOfflineLinks>false</detectOfflineLinks>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-checkstyle-plugin</artifactId>
            <version>2.6</version>
            <configuration>
               <configLocation>http://www.nl.fatwire.com/svn/dta/contrib/gst-foundation/trunk/src/config/gsf-checkstyle.xml</configLocation>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>findbugs-maven-plugin</artifactId>
            <version>2.3.2</version>
         </plugin>
         <plugin>
            <artifactId>maven-pmd-plugin</artifactId>
            <version>2.5</version>
            <configuration>
               <targetJdk>1.6</targetJdk>
            </configuration>
         </plugin>
      </plugins>
   </reporting>
   <repositories>
      <repository>
         <id>nl.fatwire.com</id>
         <url>http://www.nl.fatwire.com/maven2</url>
         <snapshots>
            <enabled>false</enabled>
         </snapshots>
         <releases>
            <enabled>true</enabled>
         </releases>
      </repository>
      <repository>
         <id>snapshot.nl.fatwire.com</id>
         <url>http://www.nl.fatwire.com/snapshot-repo</url>
         <snapshots>
            <enabled>true</enabled>
         </snapshots>
         <releases>
            <enabled>false</enabled>
         </releases>
      </repository>
   </repositories>
   <distributionManagement>
      <site>
         <id>website</id>
         <url>scp://www.nl.fatwire.com/var/www/html/dta/contrib/gst-foundation</url>
      </site>
   </distributionManagement>
</project>
